<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="注册"
             x:Class="NewLoginAapp.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="5">
                <Label FontSize="Large" Text="用户名:"/>
                <Entry x:Name="User_Name" FontSize="Default" HeightRequest="50"
                        Placeholder="请输入用户名" Keyboard="Default" ReturnType="Next" MaxLength="11"/>
                <Label FontSize="Large" Text="密码:"/>
                <Entry x:Name="User_Pwd" FontSize="Default" HeightRequest="50" IsPassword="True" 
                        Placeholder="请输入密码" Keyboard="Default" ReturnType="Next" MaxLength="16"/>
                <Label FontSize="Large" Text="密码:"/>
                <Entry x:Name="User_Pwd2" FontSize="Default" HeightRequest="50" IsPassword="True" 
                        Placeholder="请再输入密码" Keyboard="Default" ReturnType="Next" MaxLength="16"/>
                <Button HeightRequest="50" Margin="8" CornerRadius="5" Text="注册" 
                        Clicked="Register_Clicked" FontSize="Default" TextColor="White" 
                        BackgroundColor="#1976D2"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>